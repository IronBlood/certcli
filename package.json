		"@types/yargs": "^17.0.33",
		"jest": "^30.0.5",
		"rimraf": "^6.0.1",
		"semantic-release": "^24.2.7",
		"ts-jest": "^29.4.0",
		"typescript": "^5.8.3"
	},
